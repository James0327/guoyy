<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.tc.test.mybatis.dao.UserDAO">
    <resultMap id="BaseResultMap" type="UserDO">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="user_name" property="userName" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="account" property="account" jdbcType="BIGINT"/>
    </resultMap>

    <update id="update" parameterType="UserDO">
        update user_info
        <trim prefix="set" suffixOverrides=",">
            <if test="user_name != null and user_name != ''">
                user_name=#{userName},
            </if>
            <if test="password != null and password != ''">
                password=#{password},
            </if>
            <if test="account != null">
                account=#{account},
            </if>
        </trim>
        where id = #{id}
    </update>
    <insert id="insert" parameterType="UserDO">
        insert into user_info (user_name, password, account)
        values (#{userName},#{password},#{account})
    </insert>
    <!--<delete id="deleteById">-->
    <!--delete from user_info where id = #{id}-->
    <!--</delete>-->
    <select id="selectById" resultMap="BaseResultMap">
      select * from user_info where id = #{id}
    </select>

</mapper>
