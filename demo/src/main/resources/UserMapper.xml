<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jw.tcly.mybatis.dao.UserDAO">
    <resultMap id="BaseResultMap" type="com.jw.tcly.mybatis.dto.UserDO">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="user_name" property="userName" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="account" property="account" jdbcType="BIGINT"/>
        <result column="t_date" property="tDate" jdbcType="DATE"/>
        <result column="t_time" property="tTime" jdbcType="TIME"/>
        <result column="t_datetime" property="tDatetime" jdbcType="TIMESTAMP"/>
        <result column="t_timestamp" property="tTimestamp" jdbcType="TIMESTAMP"/>
    </resultMap>

    <update id="update" parameterType="com.jw.tcly.mybatis.dto.UserDO">
        update user_info
        <trim prefix="set" suffixOverrides=",">
            <if test="userName != null and userName != ''">
                user_name=#{userName},
            </if>
            <if test="password != null and password != ''">
                password=#{password},
            </if>
            <if test="account != null">
                account=#{account},
            </if>
            <if test="tDate != null">
                t_date=${tDate}
            </if>
            <if test="t_time != null">
                t_time=${tTime}
            </if>
            <if test="t_datetime != null">
                t_datetime=${tDatetime}
            </if>
            <if test="t_timestamp != null">
                t_timestamp=${tTimestamp}
            </if>
        </trim>
        where id = #{id}
    </update>
    <insert id="insert" parameterType="com.jw.tcly.mybatis.dto.UserDO">
        insert into user_info (user_name, password, account, t_date, t_time, t_datetime, t_timestamp)
        values (#{userName}, #{password}, #{account}, #{tDate}, #{tTime}, #{tDatetime}, #{tTimestamp})
    </insert>
    <!--<delete id="deleteById">-->
    <!--delete from user_info where id = #{id}-->
    <!--</delete>-->
    <select id="selectById" resultMap="BaseResultMap">
      select * from user_info where id = #{id}
    </select>

</mapper>
